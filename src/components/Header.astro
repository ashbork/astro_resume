---
export interface Props {
    basics: {
        name: string;
        label: string;
        image: string;
        email: string;
        phone: string;
        summary: string;
        profiles: {
            network: string;
            username: string;
            url?: string;
            [k: string]: unknown;
        }[];
    };
}
const { basics } = Astro.props;
---

<div
    class="transition-all dark:bg-dark-surface bg-light-surface dark:text-dark-text text-light-text p-5 flex flex-col gap-5 rounded-md rounded-t-none"
>
    <header class="flex gap-5">
        <span class="text-xl font-bold">{basics.name}</span>
        <span class="text-xl font-bold, dark:text-dark-iris text-light-iris"
            >{basics.label}</span
        >
    </header>
    <div
        aria-label="Contact info"
        class="flex dark:text-dark-rose text-light-rose justify-around flex-wrap transition-all print:hidden"
    >
        <a
            href={"mailto:" + basics.email}
            target="_blank"
            class="flex gap-2 hover:opacity-50 transition-all duration-100 ease-in-out"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6 print:hidden"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
            </svg>
            <span>{basics.email}</span>
        </a>
        <a
            href={"tel:" + basics.phone}
            target="_blank"
            class="flex gap-2 hover:opacity-50 transition-all duration-100 ease-in-out"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6 print:hidden"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
            </svg>
            <span>{basics.phone}</span>
        </a>

        <!--linkedin-->
        {
            basics.profiles[1] && (
                <a
                    href={basics.profiles[1].url}
                    target="_blank"
                    class="flex gap-2 hover:opacity-50  transition-all duration-100 ease-in-out"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6 print:hidden"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                        />
                    </svg>

                    <span>LinkedIn</span>
                </a>
            )
        }

        <!--github-->
        {
            basics.profiles[0] && (
                <a
                    href={basics.profiles[0].url}
                    target="_blank"
                    class="flex gap-2 hover:opacity-50  transition-all duration-100 ease-in-out"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-6 h-6 print:hidden"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
                        />
                    </svg>

                    <span>GitHub</span>
                </a>
            )
        }
    </div>
    <p>{basics.summary}</p>
</div>
