<script>
    // redirect user to page depending on the language in local storage. If no language is set, redirect to english
    var lang = localStorage.getItem("lang");
    console.log(window.location.pathname);
    switch (lang) {
        case null:
            localStorage.setItem("lang", "en");
        case "en":
            window.location.pathname = window.location.pathname + `en`;
            break;
        case "pl":
            window.location.pathname = window.location.pathname + `pl`;
            break;
    }
</script>
